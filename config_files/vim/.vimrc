@REM # ~/.vimrc
syntax on
set scrolloff=5
set showcmd
set hlsearch
set incsearch
set ignorecase
set smartcase
set nu
set encoding=utf-8
filetype indent on
set tabstop=4
set shiftwidth=4
set autoindent
set laststatus=2
set ruler
set expandtab
set softtabstop=4
set noerrorbells
set cursorline
set wrap
set wildmenu
set nobackup
set noswapfile
set t_Co=256
set relativenumber
set mouse+=a
exec "nohlsearch"